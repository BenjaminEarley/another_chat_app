<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Base theme, all common styling here-->
    <style name="Base.Chat" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Chat" parent="@style/Base.Chat" />

    <style name="Chat.Teal">
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_400</item>
        <item name="colorSecondary">@color/pink_600</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
    </style>

    <style name="Chat.Teal.Splash">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Chat.Teal.LoginTheme" parent="FirebaseUI">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.Chat.Teal.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_400</item>
        <item name="colorSecondary">@color/pink_600</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorOnSecondary">#fff</item>
    </style>

    <style name="Chat.Pink">
        <item name="android:statusBarColor">@color/pink_700</item>
        <item name="colorPrimary">@color/pink_600</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_400</item>
    </style>

    <style name="ThemeOverlay.Chat.Pink.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/pink_600</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_400</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorOnSecondary">#fff</item>
    </style>

    <style name="ThemeOverlay.Chat.Pink.AddChatBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/pink_600</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_400</item>
    </style>

</resources>